{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["core/*"],
      "@components/*": ["components/*"],
      "@shared/*": ["shared/*"],
      "@env/*": ["environments/*"],
      "@environment": ["environments/environment.cordova.build"],
      "@pages/*": ["pages/*"],
      "@providers/*": ["providers/*"],
      "@directives/*": ["shared/directives/*"]
    }
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
